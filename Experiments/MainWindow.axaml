<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:my="clr-namespace:Experiments"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Experiments.MainWindow"
        Title="Experiments"
        x:DataType="my:MyViewModel">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
            <Button Command="{Binding ClickMe}">Add 1</Button>
            <Button Command="{Binding RunBackground}">Add BackGround</Button>
            <TextBlock Text="{Binding Counter}" />
        </StackPanel>
        <ListBox ItemsSource="{Binding Numbers}"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>id:</TextBlock>
                        <TextBlock Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>