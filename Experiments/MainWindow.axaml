<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:my="clr-namespace:Experiments"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Experiments.MainWindow"
        Title="Experiments"
        x:DataType="my:MyViewModel">
    <StackPanel Orientation="Vertical">
        <Button Command="{Binding ClickMe}">Add 1</Button>
        <Button Command="{Binding RunBackground}">Add BackGround</Button>
        <TextBlock Text="{Binding Counter}" />
        <ListBox ItemsSource="{Binding Numbers}"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>id:</TextBlock>
                        <TextBlock Text="{Binding}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>