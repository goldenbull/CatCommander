<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="clr-namespace:CatCommander.View"
             xmlns:vm="clr-namespace:CatCommander.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CatCommander.View.MainPanel"
             x:DataType="vm:MainPanelViewModel">
    <DockPanel>
        <TabStrip DockPanel.Dock="Top" ItemsSource="{Binding RootFileItems}">
            <TabStrip.ItemTemplate>
                <DataTemplate x:DataType="vm:ItemBrowserViewModel">
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </TabStrip.ItemTemplate>
        </TabStrip>
        <view:ItemBrowser DataContext="{Binding ActiveFileItem}" />
    </DockPanel>
</UserControl>