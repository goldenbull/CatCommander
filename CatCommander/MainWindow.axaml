<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:CatCommander.UI"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="500" MinHeight="400"
        WindowState="Maximized"
        x:Class="CatCommander.MainWindow"
        Title="CatCommander">

    <!-- Top menu bar-->
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File">
                <NativeMenu>
                    <NativeMenuItem Header="Open" Gesture="Meta+O" />
                    <NativeMenuItem Header="Save" Gesture="Meta+S" />
                    <NativeMenuItem Header="Close" Gesture="Meta+W" />
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Edit">
                <NativeMenu>
                    <NativeMenuItem Header="Cut" Gesture="Meta+X" />
                    <NativeMenuItem Header="Copy" Gesture="Meta+C" />
                    <NativeMenuItem Header="Past" Gesture="Meta+V" />
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>

    <DockPanel LastChildFill="True">
        <!-- main menu -->
        <DockPanel DockPanel.Dock="Top" Height="24">
            <NativeMenuBar DockPanel.Dock="Left" x:Name="MenuBar" />
            <OnPlatform>
                <OnPlatform.macOS>
                    <!-- mac specific menu is in App.axaml -->
                    <Menu IsVisible="False" />
                </OnPlatform.macOS>
                <OnPlatform.Default>
                    <!-- right aligned menu items on windows and linux -->
                    <Menu DockPanel.Dock="Right">
                        <Menu.ItemsPanel>
                            <ItemsPanelTemplate>
                                <DockPanel HorizontalAlignment="Stretch"></DockPanel>
                            </ItemsPanelTemplate>
                        </Menu.ItemsPanel>
                        <MenuItem Header="About" HorizontalAlignment="Right">
                            <MenuItem Header="About"></MenuItem>
                            <MenuItem Header="Help"></MenuItem>
                            <MenuItem Header="Check Update"></MenuItem>
                        </MenuItem>
                    </Menu>
                </OnPlatform.Default>
            </OnPlatform>
        </DockPanel>

        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" BorderBrush="LightGray" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Height="24">
                <StackPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </StackPanel.Styles>
                <Button ToolTip.Tip="Close something">
                    <Image Source="/Images/close_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/selectall_32x32.png" />
                </Button>
                <Separator Width="1" Height="16" VerticalAlignment="Center" Margin="4" />
                <Button ToolTip.Tip="Close something">
                    <Image Source="/Images/close_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/selectall_32x32.png" />
                </Button>
            </StackPanel>
        </Border>

        <!-- main panes -->
        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="44" />
                <ColumnDefinition Width="*" MinWidth="100" />
            </Grid.ColumnDefinitions>

            <!-- Left Pane -->
            <ui:MainPanel Grid.Column="0" />

            <!-- Vertical Menu and two splitters Between Panes -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Left"
                          Width="6"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext">
                <GridSplitter.Template>
                    <ControlTemplate>
                        <Grid RowDefinitions="*,32,*">
                            <Image Grid.Row="0" Width="3" Source="/Images/empty.png" Stretch="Fill"
                                   VerticalAlignment="Stretch">
                            </Image>
                            <Image Grid.Row="1" Source="/Images/resizing-thumb.png" Width="3" Height="32"
                                   Stretch="Fill">
                            </Image>
                            <Image Grid.Row="2" Width="3" Source="/Images/empty.png" Stretch="Fill"
                                   VerticalAlignment="Stretch">
                            </Image>
                        </Grid>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>
            <StackPanel Grid.Column="1" Width="24" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Styles>
                    <!-- todo: refactor, DRY -->
                    <Style Selector="Button">
                        <Setter Property="Width" Value="24" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </StackPanel.Styles>
                <!--<Border Height="100" BorderThickness="1" BorderBrush="Blue" />-->
                <Button>
                    <Image Source="/Images/invert_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/download_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/left_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/right_32x32.png" />
                </Button>
            </StackPanel>
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Right"
                          Width="6"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext">
                <GridSplitter.Template>
                    <ControlTemplate>
                        <Grid RowDefinitions="*,32,*">
                            <Image Grid.Row="0" Width="3" Source="/Images/empty.png" Stretch="Fill"
                                   VerticalAlignment="Stretch">
                            </Image>
                            <Image Grid.Row="1" Source="/Images/resizing-thumb.png" Width="3" Height="32"
                                   Stretch="Fill">
                            </Image>
                            <Image Grid.Row="2" Width="3" Source="/Images/empty.png" Stretch="Fill"
                                   VerticalAlignment="Stretch">
                            </Image>
                        </Grid>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>

            <!-- Right Pane -->
            <ui:MainPanel Grid.Column="2" />

        </Grid>
    </DockPanel>
</Window>