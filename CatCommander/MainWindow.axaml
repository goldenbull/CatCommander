<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="500" MinHeight="400"
        WindowState="Maximized"
        x:Class="CatCommander.MainWindow"
        Title="CatCommander">
    <DockPanel LastChildFill="True">

        <!-- Top menu bar-->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New Tab" InputGesture="Ctrl+T" />
                <MenuItem Header="_Close Tab" InputGesture="Ctrl+W" />
                <Separator />
                <MenuItem Header="_Exit" InputGesture="Alt+F4" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy" InputGesture="F5" />
                <MenuItem Header="_Move" InputGesture="F6" />
                <MenuItem Header="_Delete" InputGesture="F8" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Refresh" InputGesture="Ctrl+R" />
                <MenuItem Header="_Show Hidden Files" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1" Padding="5">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Button Content="Back" ToolTip.Tip="Go Back (Alt+Left)" Padding="8,4" />
                <Button Content="Forward" ToolTip.Tip="Go Forward (Alt+Right)" Padding="8,4" />
                <Separator Width="1" Height="20" Margin="5,0" />
                <Button Content="Up" ToolTip.Tip="Parent Directory (Backspace)" Padding="8,4" />
                <Button Content="Refresh" ToolTip.Tip="Refresh (Ctrl+R)" Padding="8,4" />
                <Separator Width="1" Height="20" Margin="5,0" />
                <Button Content="Copy" ToolTip.Tip="Copy (F5)" Padding="8,4" />
                <Button Content="Move" ToolTip.Tip="Move (F6)" Padding="8,4" />
                <Button Content="Delete" ToolTip.Tip="Delete (F8)" Padding="8,4" />
                <Separator Width="1" Height="20" Margin="5,0" />
                <Button Content="Search" ToolTip.Tip="Search Files (Ctrl+F)" Padding="8,4" />
            </StackPanel>
        </Border>

        <!-- status bar -->
        <Border DockPanel.Dock="Bottom" Margin="5">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                <TextBlock Grid.Column="0" Text="Ready" Margin="0,0,10,0" />
                <TextBlock Grid.Column="2" Text="Selected: 0 files" Margin="0,0,10,0" />
                <TextBlock Grid.Column="3" Text="Total: 10 items" />
            </Grid>
        </Border>

        <!-- main panes -->
        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" MinWidth="100" />
            </Grid.ColumnDefinitions>

            <!-- Left Pane -->
            <TabControl Grid.Column="0" Margin="0" Padding="0">
                <TabItem Header="C:" Margin="0" Padding="0">
                    <Border BorderThickness="1" BorderBrush="Gray">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Margin="5">Left Pane</TextBlock>
                            <ListBox>
                                <ListBoxItem>.. (Parent Directory)</ListBoxItem>
                                <ListBoxItem>Folder 1</ListBoxItem>
                                <ListBoxItem>Folder 2</ListBoxItem>
                                <ListBoxItem>File 1.txt</ListBoxItem>
                                <ListBoxItem>File 2.txt</ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="C:\windows">
                    <Border BorderThickness="1" BorderBrush="Gray">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Margin="5">Left Pane</TextBlock>
                            <ListBox>
                                <ListBoxItem>.. (Parent Directory)</ListBoxItem>
                                <ListBoxItem>Folder 1</ListBoxItem>
                                <ListBoxItem>Folder 2</ListBoxItem>
                                <ListBoxItem>File 1.txt</ListBoxItem>
                                <ListBoxItem>File 2.txt</ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>

            <!-- Vertical Menu and two splitters Between Panes -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Left"
                          Width="4"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext" />
            <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="32">
                <Border Height="100" />
                <Button Margin="0" Padding="0" Width="32">
                    <Image Source="resm:Avalonia.Skia.Assets.NoiseAsset_256X256_PNG.png?assembly=Avalonia.Skia" />
                </Button>
                <Button Margin="0" Padding="0" Width="32">
                    <Image Source="resm:Avalonia.Skia.Assets.NoiseAsset_256X256_PNG.png?assembly=Avalonia.Skia" />
                </Button>
                <Button Margin="0" Padding="0" Width="32">
                    <Image Source="resm:Avalonia.Skia.Assets.NoiseAsset_256X256_PNG.png?assembly=Avalonia.Skia" />
                </Button>
                <Button Margin="0" Padding="0" Width="32">
                    <Image Source="resm:Avalonia.Skia.Assets.NoiseAsset_256X256_PNG.png?assembly=Avalonia.Skia" />
                </Button>
            </StackPanel>
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Right"
                          Width="4"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext" />

            <!-- Right Pane -->
            <TabControl Grid.Column="2" Margin="0" Padding="0">
                <TabItem Header="C:" Margin="0" Padding="0">
                    <Border BorderThickness="1" BorderBrush="Gray">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Margin="5">Left Pane</TextBlock>
                            <ListBox>
                                <ListBoxItem>.. (Parent Directory)</ListBoxItem>
                                <ListBoxItem>Folder 1</ListBoxItem>
                                <ListBoxItem>Folder 2</ListBoxItem>
                                <ListBoxItem>File 1.txt</ListBoxItem>
                                <ListBoxItem>File 2.txt</ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="C:\windows" Margin="0" Padding="0">
                    <Border BorderThickness="1" BorderBrush="Gray">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Margin="5">Left Pane</TextBlock>
                            <ListBox>
                                <ListBoxItem>.. (Parent Directory)</ListBoxItem>
                                <ListBoxItem>Folder 1</ListBoxItem>
                                <ListBoxItem>Folder 2</ListBoxItem>
                                <ListBoxItem>File 1.txt</ListBoxItem>
                                <ListBoxItem>File 2.txt</ListBoxItem>
                            </ListBox>
                        </StackPanel>
                    </Border>
                </TabItem>
            </TabControl>

        </Grid>
    </DockPanel>
</Window>