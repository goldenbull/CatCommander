<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:CatCommander"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="500" MinHeight="400"
        WindowState="Maximized"
        x:Class="CatCommander.MainWindow"
        x:DataType="local:MainWindow"
        Title="CatCommander">

    <!-- Top menu bar-->
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File" IsVisible="true">
                <NativeMenu>                    
                    <NativeMenuItem Header="Open…"  Gesture="Meta+O" />
                    <NativeMenuItem Header="Save As…"  Gesture="Meta+Shift+S" />
                    <NativeMenuItem Header="Save As…"  Gesture="Meta+A" />
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Edit" IsEnabled="true">
                <NativeMenu>
                    <NativeMenuItem Header="Cut"  Gesture="Meta+X" />
                    <NativeMenuItem Header="Copy"  Gesture="Meta+C" />
                    <NativeMenuItem Header="Past"  Gesture="Meta+V" />
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="About" IsVisible="{Binding IsWindowsOS}">
                <NativeMenu>                    
                    <NativeMenuItem Header="Open…"  Gesture="Meta+O" />
                    <NativeMenuItem Header="Save As…"  Gesture="Meta+Shift+S" />
                    <NativeMenuItem Header="Save As…"  Gesture="Meta+A" />
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>

    <DockPanel LastChildFill="True">
        <NativeMenuBar DockPanel.Dock="Top" x:Name="MenuBar" />

        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1" Padding="5">
            <StackPanel Orientation="Horizontal">
                <Button>
                    <Image Source="/Images/close_32x32.png" Width="32" />
                </Button>
                <Button>
                    <Image Source="/Images/selectall_32x32.png" Width="32" />
                </Button>
                <Separator Width="1" Height="20" Margin="5,0" />
                <Button Content="Up" ToolTip.Tip="Parent Directory (Backspace)" Padding="8,4" />
                <Button Content="Refresh" ToolTip.Tip="Refresh (Ctrl+R)" Padding="8,4" />
                <Separator Width="1" Height="20" Margin="5,0" />
                <Button Content="Copy" ToolTip.Tip="Copy (F5)" Padding="8,4" />
                <Button Content="Move" ToolTip.Tip="Move (F6)" Padding="8,4" />
                <Button Content="Delete" ToolTip.Tip="Delete (F8)" Padding="8,4" />
                <Separator Width="1" Height="20" Margin="5,0" />
                <Button Content="Search" ToolTip.Tip="Search Files (Ctrl+F)" Padding="8,4" />
            </StackPanel>
        </Border>

        <!-- main panes -->
        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" MinWidth="100" />
            </Grid.ColumnDefinitions>

            <!-- Left Pane -->
            <TabControl Grid.Column="0">
                <TabItem Header="Home">
                    <local:ItemsBrowser />
                </TabItem>
            </TabControl>

            <!-- Vertical Menu and two splitters Between Panes -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Left"
                          Width="4"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext" />
            <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="32">
                <Border Height="100" />
                <Button Margin="0" Padding="0" Width="32">
                    <Image Source="/Images/invert_32x32.png" />
                </Button>
                <Button Margin="0" Padding="0" Width="32">
                    <Image Source="/Images/download_32x32.png" />
                </Button>
                <Button Margin="0" Padding="0" Width="32">
                    <Image Source="/Images/left_32x32.png" />
                </Button>
                <Button Margin="0" Padding="0" Width="32">
                    <Image Source="/Images/right_32x32.png" />
                </Button>
            </StackPanel>
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Right"
                          Width="4"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext" />

            <!-- Right Pane -->
            <TabControl Grid.Column="2">
                <TabItem Header="Home">
                    <local:ItemsBrowser />
                </TabItem>
                <TabItem Header="src">
                    <local:ItemsBrowser />
                </TabItem>
            </TabControl>

        </Grid>
    </DockPanel>
</Window>