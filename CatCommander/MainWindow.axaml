<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:CatCommander.UI"
        mc:Ignorable="d"
        d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="500" MinHeight="400"
        WindowState="Maximized"
        x:Class="CatCommander.MainWindow"
        Title="CatCommander">

    <!-- Top menu bar-->
    <NativeMenu.Menu>
        <NativeMenu>
            <NativeMenuItem Header="File">
                <NativeMenu>
                    <NativeMenuItem Header="Open" Gesture="Meta+O" />
                    <NativeMenuItem Header="Save" Gesture="Meta+S" />
                    <NativeMenuItem Header="Close" Gesture="Meta+W" />
                </NativeMenu>
            </NativeMenuItem>
            <NativeMenuItem Header="Edit">
                <NativeMenu>
                    <NativeMenuItem Header="Cut" Gesture="Meta+X" />
                    <NativeMenuItem Header="Copy" Gesture="Meta+C" />
                    <NativeMenuItem Header="Past" Gesture="Meta+V" />
                </NativeMenu>
            </NativeMenuItem>
        </NativeMenu>
    </NativeMenu.Menu>

    <DockPanel LastChildFill="True">
        <!-- main menu -->
        <OnPlatform>
            <OnPlatform.macOS>
                <NativeMenuBar x:Name="NativeMenuBar"/>
            </OnPlatform.macOS>
            <OnPlatform.Default>
                <DockPanel DockPanel.Dock="Top">
                    <NativeMenuBar DockPanel.Dock="Left" FontSize="12" Height="20" />
                    <!-- right aligned menu items on windows and linux -->
                    <Menu DockPanel.Dock="Right" Height="20" FontSize="12">
                        <Menu.ItemsPanel>
                            <ItemsPanelTemplate>
                                <DockPanel HorizontalAlignment="Stretch"></DockPanel>
                            </ItemsPanelTemplate>
                        </Menu.ItemsPanel>
                        <MenuItem Header="About" HorizontalAlignment="Right">
                            <MenuItem Header="About"></MenuItem>
                            <MenuItem Header="Help"></MenuItem>
                            <MenuItem Header="Check Update"></MenuItem>
                        </MenuItem>
                    </Menu>
                </DockPanel>
            </OnPlatform.Default>
        </OnPlatform>

        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" BorderBrush="LightGray" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Height="24" Spacing="1">
                <StackPanel.Styles>
                    <Style Selector="Button">
                        <Setter Property="MinHeight" Value="0" />
                        <Setter Property="Height" Value="24" />
                        <Setter Property="Width" Value="24" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </StackPanel.Styles>
                <Button>
                    <Image Source="/Images/close_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/left_32x32.png" />
                </Button>
                <Separator Width="1" Height="16" VerticalAlignment="Center" Margin="4" />
                <Button ToolTip.Tip="forward">
                    <Image Source="/Images/right_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/download_32x32.png" />
                </Button>
            </StackPanel>
        </Border>

        <!-- main panes -->
        <Grid Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="44" />
                <ColumnDefinition Width="*" MinWidth="100" />
            </Grid.ColumnDefinitions>

            <!-- Left Pane -->
            <ui:ItemsBrowser Grid.Column="0" />

            <!-- Vertical Menu and two splitters Between Panes -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Left"
                          Width="6"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext">
            </GridSplitter>
            <StackPanel Grid.Column="1" Width="24" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="1">
                <StackPanel.Styles>
                    <!-- todo: refactor, DRY -->
                    <Style Selector="Button">
                        <Setter Property="MinHeight" Value="0" />
                        <Setter Property="Height" Value="24" />
                        <Setter Property="Width" Value="24" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="0" />
                    </Style>
                </StackPanel.Styles>
                <!--<Border Height="100" BorderThickness="1" BorderBrush="Blue" />-->
                <Button>
                    <Image Source="/Images/invert_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/download_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/left_32x32.png" />
                </Button>
                <Button>
                    <Image Source="/Images/right_32x32.png" />
                </Button>
            </StackPanel>
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Right"
                          Width="6"
                          ResizeDirection="Columns"
                          ResizeBehavior="PreviousAndNext">
            </GridSplitter>

            <!-- Right Pane -->
            <ui:MainPanel Grid.Column="2" />

        </Grid>
    </DockPanel>
</Window>